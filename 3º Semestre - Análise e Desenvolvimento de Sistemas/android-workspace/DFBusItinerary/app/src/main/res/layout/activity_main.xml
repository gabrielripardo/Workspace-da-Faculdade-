<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/estrada2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Itinerário de Ônibus do DF!"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#fffcfc"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seja bem-vindo usuário!!!"
        android:id="@+id/textView2"
        android:textStyle="italic"
        android:textColor="#fdfbff"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Developers: Tadeu, Dériu, Wagner e Gabriel"
        android:id="@+id/textView3"
        android:textColor="#fffaff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="v1.0 - PDM | JK.2017"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textColor="#fffaff"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewContatoId"
        android:background="@drawable/contato3"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contato    "
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:textColor="#b3b3b3"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/imageViewContatoId"
        android:layout_alignEnd="@+id/imageViewContatoId" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewItinerarioId"
        android:background="@drawable/itinerario3"
        android:layout_below="@+id/dataId"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Itinerários"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textColor="#b3b3b3"
        android:layout_below="@+id/imageViewItinerarioId"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewInformacoesId"
        android:background="@drawable/sobre"
        android:layout_below="@+id/dataId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Informações"
        android:id="@+id/textView8"
        android:textColor="#b3b3b3"
        android:textStyle="bold"
        android:layout_below="@+id/imageViewInformacoesId"
        android:layout_alignRight="@+id/imageViewInformacoesId"
        android:layout_alignEnd="@+id/imageViewInformacoesId" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewServicosId"
        android:background="@drawable/servicos"
        android:layout_alignTop="@+id/imageViewContatoId"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Serviços/Extras"
        android:id="@+id/textView10"
        android:textColor="#b3b3b3"
        android:textStyle="bold"
        android:layout_below="@+id/imageViewServicosId"
        android:layout_alignRight="@+id/imageViewServicosId"
        android:layout_alignEnd="@+id/imageViewServicosId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Instrutor: Prof. Eduardo Borges"
        android:id="@+id/textView12"
        android:textColor="#fffcff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dataId"
        android:layout_below="@+id/textView2"
        android:textColor="#fffcfc"
        android:textStyle="bold"
        android:textSize="18dp"
        android:singleLine="false"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toRightOf="@+id/imageViewInformacoesId"
        android:layout_toEndOf="@+id/imageViewInformacoesId" />
</RelativeLayout>
